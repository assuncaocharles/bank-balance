{
  "name": "bank-account",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf accounts",
    "start": "npm run clean && nodemon --watch 'src/' --exec 'ts-node src/entry.ts' -e ts",
    "test": "npm run clean && jest --no-cache --watchAll",
    "build": "tsc",
    "format": "prettier \"src/**/*.ts\" --config .prettierrc --write",
    "lint": "tslint -c tslint.json \"src/**/*.ts\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.12",
    "@types/lodash": "^4.14.124",
    "@types/supertest": "^2.0.7",
    "body-parser": "^1.18.3",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "jest": "^24.8.0",
    "level": "^5.0.1",
    "level-transactions": "^2.1.4",
    "lodash": "^4.17.19",
    "nodemon": "^1.19.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run format",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-functional-preset": "^1.5.0"
  }
}
